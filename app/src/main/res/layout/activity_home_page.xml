<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.HomePageActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_above="@+id/bottomBar">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorWhite"
                android:layout_marginTop="@dimen/_20sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/txt_good_morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Good Morning"
                        android:textSize="@dimen/_15sdp"
                        android:fontFamily="@font/lato_regular"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"/>


                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/lato_regular"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"/>


                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/_11sdp"
                        android:fontFamily="@font/lato_regular"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"/>




                </LinearLayout>


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_25sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    >


                    <androidx.cardview.widget.CardView
                        android:id="@+id/sale_order_history"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_60sdp"
                        app:cardCornerRadius="@dimen/_3sdp"
                        android:elevation="@dimen/_3sdp"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:layout_weight="1"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/order_history_bg"
                            android:gravity="center"
                            android:orientation="horizontal"
                            >



                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/img_order_history"
                                android:tint="@color/colorWhite"
                                />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:fontFamily="@font/lato_regular"
                                android:gravity="center"
                                android:text="Sale\nOrder History"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>



                    <androidx.cardview.widget.CardView
                        android:id="@+id/order_history"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_60sdp"
                        app:cardCornerRadius="@dimen/_3sdp"
                        android:elevation="@dimen/_3sdp"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_8sdp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/manage_product_bg"
                            android:gravity="center"
                            >




                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/img_order_history"
                                android:tint="@color/colorWhite"
                                />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="Order History"
                                android:gravity="center"
                                android:fontFamily="@font/lato_regular"
                                android:textSize="@dimen/_12sdp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>





                </LinearLayout>






                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        >




                        <androidx.cardview.widget.CardView
                            android:id="@+id/sale_scanner"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_60sdp"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:elevation="@dimen/_3sdp"
                            android:layout_marginVertical="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/scanner_bg"
                                android:gravity="center"
                                >


                                <ImageView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:src="@drawable/img_scanner"
                                    android:tint="@color/colorWhite"
                                    />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorWhite"
                                    android:text="Sale Product"
                                    android:gravity="center"
                                    android:fontFamily="@font/lato_regular"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:textStyle="bold"
                                    android:textAlignment="center"
                                    />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>



                        <androidx.cardview.widget.CardView
                            android:id="@+id/order_scanner"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_60sdp"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:elevation="@dimen/_3sdp"
                            android:layout_marginVertical="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:visibility="visible"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/order_product_bg"
                                android:gravity="center"
                                >




                                <ImageView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:src="@drawable/img_scanner"
                                    android:tint="@color/colorWhite"
                                    />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorWhite"
                                    android:text="Order Product"
                                    android:gravity="center"
                                    android:fontFamily="@font/lato_regular"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:textStyle="bold"
                                    android:textAlignment="center"
                                    />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    >




                    <androidx.cardview.widget.CardView
                        android:id="@+id/sale_cart_product"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_60sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:elevation="@dimen/_3sdp"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/sale_cart_bg"
                            android:gravity="center"
                            >




                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/img_cart"
                                android:tint="@color/colorWhite"
                                />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="Sale \nCart Product"
                                android:gravity="center"
                                android:fontFamily="@font/lato_regular"
                                android:textSize="@dimen/_12sdp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>



                    <androidx.cardview.widget.CardView
                        android:id="@+id/order_cart_product"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_60sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:elevation="@dimen/_3sdp"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:visibility="visible"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/order_history_bg"
                            android:gravity="center"
                            >




                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/img_cart"
                                android:tint="@color/colorWhite"
                                />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="Order \nCart Product"
                                android:gravity="center"
                                android:fontFamily="@font/lato_regular"
                                android:textSize="@dimen/_12sdp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>








            </LinearLayout>








            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    >


                    <androidx.cardview.widget.CardView
                        android:id="@+id/stocks"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_60sdp"
                        app:cardCornerRadius="@dimen/_3sdp"
                        android:elevation="@dimen/_3sdp"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:layout_weight="1"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/stocks_bg"
                            android:gravity="center"
                            android:orientation="horizontal"
                            >



                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/img_order_history"
                                android:tint="@color/colorWhite"
                                />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:fontFamily="@font/lato_regular"
                                android:gravity="center"
                                android:text="Stocks"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>



                    <androidx.cardview.widget.CardView
                        android:id="@+id/cart_product"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_50sdp"
                        app:cardCornerRadius="@dimen/_3sdp"
                        android:elevation="@dimen/_3sdp"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:visibility="invisible"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/manage_product_bg"
                            android:gravity="center"
                            >




                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/img_cart"
                                android:tint="@color/colorWhite"
                                />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="Sale Product"
                                android:gravity="center"
                                android:fontFamily="@font/lato_regular"
                                android:textSize="@dimen/_12sdp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>



                </LinearLayout>


            </LinearLayout>




        </LinearLayout>

    </ScrollView>

</RelativeLayout>